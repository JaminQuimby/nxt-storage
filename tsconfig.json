{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"inlineSources": true,
		"outDir": "dist",
        "declaration": true,
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ]
	},
    "include": [
        "src/**/*",
        "index.ts"
    ],
	"exclude": [
		"node_modules",
//		"index.d.ts",
		"dist"
	],
    "angularCompilerOptions": {
        "genDir": "dist",
        "skipTemplateCodegen": true
    }
}
